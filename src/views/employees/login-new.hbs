{{!-- Head --}}
<title>Verify Your Account</title>
<link rel="stylesheet" href="/vendor/css/core.css" class="template-customizer-core-css" />
<link rel="stylesheet" href="/vendor/css/pages/page-auth.css">
<link rel="stylesheet" href="/vendor/css/theme-default.css" class="template-customizer-theme-css" />
{{!-- Body --}}
<div class="authentication-wrapper authentication-basic px-4">
    <div class="authentication-inner">
        <div class="card">
            <div class="card-body">
                <!-- Logo -->
                <div class="app-brand justify-content-center">
                    <a href="#" class="app-brand-link gap-2">
                        <span class="app-brand-logo demo">
                             <img src="/image/logo.png" alt="Logo" style="width: 150px; height: 55px;">
                        </span>
                    </a>
                </div>
                <form action="/employees/log-in-new" method="post">
                    <h3 class="mb-2">Verify your email ✉️</h3>
                    <input type="text" name="_id" value="{{data.id}}" hidden>
                    <p class="text-start">
                        Account activation link sent to your email address: {{data.email}}.
                        Please follow the link inside to continue.
                    </p>
                    <button type="submit" class="btn btn-primary w-100 my-3">
                        Skip for now
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

